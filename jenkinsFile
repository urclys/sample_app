pipeline {
    agent any
    tools { 
        nodejs 'node' 
    }
    options {
        skipDefaultCheckout(true)
        parallelsAlwaysFailFast()
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr: '20', artifactNumToKeepStr: '20'))
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: '*/main']], 
                    doGenerateSubmoduleConfigurations: false, 
                    extensions: [], 
                    submoduleCfg: [], 
                    userRemoteConfigs: [[url: 'https://github.com/urclys/sample_app', credentialsId: 'git-creds']]
                            ])
            }
        }
        stage('Build') {
            steps {
                script {
                    // sh 'npm install'
                    // sh 'npm run build'
                    sh 'ls -a'
                }
            }
        }
        // stage('Publish') {
        //     steps {
        //         script {
        //             // sh 'npm publish'
        //         }
        //     }
        // }
    }
}
