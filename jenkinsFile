pipeline {
    agent any
    tools {
        nodejs 'node'
    }
    options {
        parallelsAlwaysFailFast()
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
    }
    
    stages {
       stage('Build - Master') {
            when { branch 'master' }
            steps {
                // Steps for master branch
                 sh 'npm install'
                sh 'npm install webpack'
                sh 'npm run build'
            }
        }
        stage('Test - Master') {
            when { branch 'master' }
            steps {
                // Steps for master branch
            }
        }
        stage('Confirmation - Master') {
            when { branch 'master' }
                    steps {
                        script {
                            input(id: 'confirm', message: 'Proceed to the deployment ?')
                        }
                    }
                }
        stage('Deploy - Master') {
            when { branch 'master' }
            steps {
                // Steps for master branch
            }
        }
        stage('Build - Develop') {
            when { branch 'develop' }
            steps {
                // Steps for develop branch
                 sh 'npm install'
                    sh 'npm install webpack'
                    sh 'npm run build'
            }
        }
        stage('Test - Develop') {
            when { branch 'develop' }
            steps {
                // Steps for develop branch
            }
        }
        stage('Confirmation - Develop') {
            when { branch 'develop' }
                    steps {
                        script {
                            input(id: 'confirm', message: 'Proceed to the deployment ?')
                        }
                    }
                }
        stage('Deploy - Develop') {
            when { branch 'develop' }
            steps {
                // Steps for develop branch
            }
        }
            }
        }
        
        // Other stages, like deploying your application, would go here
 

